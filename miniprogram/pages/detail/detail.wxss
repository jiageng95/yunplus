/* miniprogram/pages/detail/detail.wxss */
.swiper {
  height: 600rpx;
}
.slide-image {
  width: 100%;
  height: 600rpx;
}
.header {
  padding: 20rpx;
  background: #fff;
}
.header .header-tit {
  color: #333;
  font-size: 16px;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.header .header-tit image {
  margin-right: 20rpx;
  width: 30rpx;
  height: 30rpx
}
.header .header-con {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.header .header-con .now-price {
  color: crimson;
  font-size: 14px;
  margin-right: 20rpx;
  line-height: 1;
}
.header .header-con .now-price .bold {
  font-size: 18px;
  font-weight: 800;
  margin-left: 15rpx;
}
.header .header-con .price {
  font-size: 12px;
  text-decoration: line-through;
  line-height: 1;
  color: #999;
}
.header .header-con .sold {
  flex: 1;
  font-size: 12px;
  line-height: 1;
  text-align: right;
  color: #999;
}
.header .discount {
  width: 95%;
  height: 140rpx;
  margin: 20rpx;
  background: crimson;
  border-radius: 15rpx;
  overflow: hidden;
  display: flex;
}
.header .discount .discount-l {
  width: 65%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  padding: 40rpx;
}
.header .discount .discount-l .discount-tit {
  font-size: 16px;
  color: #fff;
  margin-bottom: 10rpx;
  line-height: 1;
}
.header .discount .discount-l .discount-tit text {
  font-size: 20px;
  font-weight: 800;
  margin-left: 10rpx;
}
.header .discount .discount-l .discount-date {
  font-size: 12px;
  color: #fff;
}
.header .discount .discount-l .discount-gift {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  bottom: -10rpx;
  right: 30rpx;
  opacity: 0.1;
  transform: rotate(20deg);
}
.header .discount .discount-r {
  width: 35%;
  height: 100%;
  float: right;
  position: relative;
  border-left: 4rpx dashed #fff;
  display: flex;
  align-items: center;
}
.header .discount .discount-r::before {
  content: '';
  width: 36rpx;
  height: 36rpx;
  border-radius: 0 0 50% 50%;
  background: #fff;
  position: absolute;
  top: -18rpx;
  left: -20rpx;
}
.header .discount .discount-r::after {
  content: '';
  width: 36rpx;
  height: 36rpx;
  border-radius: 50% 50% 0 0;
  background: #fff;
  position: absolute;
  bottom: -18rpx;
  left: -20rpx;
}
.header .discount .discount-r .receive-btn {
  font-size: 20rpx;
  font-weight: 800;
  padding: 0 15rpx;
  letter-spacing: 3rpx;
  border-radius: 30rpx;
  background: linear-gradient(rgb(252, 221, 221),rgba(255, 197, 158, 0.521));
  width: 60%;
  color: crimson;
  box-shadow: 0 0 10rpx rgba(255, 197, 158, 0.521);
}